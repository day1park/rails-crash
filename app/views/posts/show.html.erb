<div class='card card-body text-white bg-primary mb-3'>
    <div class="card-header">
      <h2><%= @post.title %></h2>
    </div>
    <div class="card-body">
        <p class="card-text"><%= @post.body %></p>
      </div>
  </div>
<hr>
<%= link_to "Edit", edit_post_path(@post), :class => 'btn btn-secondary'%>
<%= link_to "Delete", post_path(@post), 
  method: :delete,
  data: {confirm: 'Are you sure?!?!?! this cannot be reversed!!!'},
  :class => 'btn btn-danger'%>

  <hr>

<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <div class='card border-info mb-3'>
    <p><strong><%= comment.username %></strong>: <%= comment.body%></p>
  </div>
<% end %>

<h3>Add Comment</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username, :class => 'form-control' %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, :class => 'form-control' %>
  </p>
  <p>
    <%= f.submit :class => 'btn btn-info' %>
  </p>

<% end %>