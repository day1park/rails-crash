<h1>All blog Posts</h1>
<% @posts.each do |post| %>
  <div class="card card-body text-white bg-primary mb-3">
    <h3 class="card-header"><%= post.title %></h3>
     <div class="card-body">
    <p class="card-text"><%= post.body %></p>
    </div>
    <%= link_to "Read more", post_path(post), :class => 'btn btn-sm btn-light'%>
  </div>
  <br>
<% end %>